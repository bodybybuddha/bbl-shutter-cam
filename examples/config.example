# Example configuration for bbl-shutter-cam

# Copy this file to:

# ~/.config/bbl-shutter-cam/config.toml

# and adjust per printer / camera setup.

# Which profile is used when --profile is not specified

default_profile = "p1s-office"

[profiles]

[profiles.p1s-office]

```
# ----------------------------
# Bluetooth device information
# ----------------------------
# The name is used during `setup` to find the device.
# The MAC address and notify_uuid are learned automatically
# and written here by `bbl-shutter-cam setup`.
[profiles.p1s-office.device]
name = "BBL_SHUTTER"
# mac = "B8:F8:62:A9:92:7E"
# notify_uuid = "00002a4d-0000-1000-8000-00805f9b34fb"

# ----------------------------
# Camera / capture behavior
# ----------------------------
[profiles.p1s-office.camera]
output_dir = "/home/pi/captures/p1s-office"
filename_format = "%Y%m%d_%H%M%S.jpg"

# Minimum seconds between captures
# (prevents accidental double-triggers)
min_interval_sec = 0.5

# ----------------------------
# rpicam-still options
# ----------------------------
[profiles.p1s-office.camera.rpicam]

# Resolution
width = 1920
height = 1080

# Disable preview (recommended for headless systems)
nopreview = true

# Orientation
# rotation = 180      # 0, 90, 180, 270
# hflip = true
# vflip = false

# ----------------------------
# Focus (Camera Module 3)
# ----------------------------
# autofocus_mode = "auto"    # auto, manual, continuous
# lens_position = 2.0         # 0.0 (infinity) to ~32.0 (close); for manual AF

# ----------------------------
# Auto exposure / color tuning
# ----------------------------

# Auto white balance mode
# awb = "auto"        # auto, daylight, tungsten, fluorescent, indoor, cloudy

# Exposure compensation
# ev = 0              # integer; negative = darker, positive = brighter

# Color & Tone adjustments
# saturation = 1.0    # 0.0-2.0; color intensity
# contrast = 1.0      # 0.0-2.0
# brightness = 0.0    # -1.0 to 1.0
# sharpness = 1.0     # 0.0-2.0

# Noise reduction
# denoise = "cdn_off"  # off, cdn_off, cdn_fast, cdn_hq

# Metering mode
# metering = "centre"  # centre, spot, matrix, custom

# ----------------------------
# Manual exposure "lock" (optional)
# ----------------------------
# Setting any of these disables full auto behavior and
# helps eliminate flicker in enclosure lighting.

# shutter = 20000      # microseconds (e.g. 20000 = 1/50s)
# gain = 2.0           # analog gain
# awbgains = "1.5,1.8" # manual white balance gains (r,b)

# ----------------------------
# Capture settings
# ----------------------------
# quality = 93         # JPEG quality (0-100)
# timeout = 5000       # capture timeout in milliseconds
```

